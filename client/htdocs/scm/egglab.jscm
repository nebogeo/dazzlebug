     (index-for-each
      (lambda (i egg)
        (ctx.drawImage egg
                       (+ 250 (* 100 (modulo i 7)))
                       (+ 150 (* 130 (Math.floor (/ i 7))))))
      vars)
     ;;(draw-egg-family-tree ctx ancestors eggs)
     (ctx.fillText "Mutation test" 20 50))
