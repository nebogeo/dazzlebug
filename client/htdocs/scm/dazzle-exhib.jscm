(define (async-load-images c l)
  (for-each
   (lambda (i)
     (let ((fullpath (bg-full-path i)))
       (load-image-mutate
        (lambda (c)
          (game-modify-data
           (lambda (d)
             (dazzle-data-modify-images
              d (append (dazzle-data-images d) (list fullpath))))
           c))
        fullpath)))
   (shuffle l)))

