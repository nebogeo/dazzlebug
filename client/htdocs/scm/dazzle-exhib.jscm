(define (samples-to-pop samples pop)
  (make-population
   "flicker"
   (if (eq? null samples)
       ()
       (map
        (lambda (d)
          ;; individually parse the pattern's code
          (cons (JSON.parse (car d)) (cdr d)))
        (cadr samples)))
   (if (eq? (car samples) "fill") 1 0)
   (car samples)
   pop))

