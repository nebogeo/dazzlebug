(define (find-pattern drawable pop)
  (let ((r (filter
            (lambda (pattern)
              (eq? drawable (individual-drawable pattern)))
            pop)))    (if (null? r) #f (car r))))

(define (time-elapsed c)
  (- (game-time c) (dazzle-data-time (game-data c))))

