(define (draw-star fn x y t)
  (ctx.save)
  (let ((img (find-image fn)))
    (ctx.translate x y)
    (ctx.translate (/ img.width 2) (/ img.height 2))
    (ctx.rotate t)
    (ctx.translate (- 0 (/ img.width 2)) 
		   (- 0 (/ img.height 2)))
    (ctx.drawImage img 0 0))
  (ctx.restore))

(define (draw-star-b fn x y t)
  (ctx.save)
  (let ((img (find-image fn)))
    (ctx.translate x y)
    (ctx.translate (/ img.width 2) (/ img.height 2))
    (let ((sc (+ 1.2 (* 0.2 (Math.sin t)))))
      (ctx.scale sc sc))
    (ctx.translate (- 0 (/ img.width 2)) 
		   (- 0 (/ img.height 2)))
    (ctx.drawImage img 0 0))
  (ctx.restore))



